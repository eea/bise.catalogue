    gem 'pry', '>= 0.9.10'
    gem 'pry-doc'
    gem 'pry-nav'
    gem 'pry-stack_explorer'
    gem 'pry-rails'
    gem 'ruby-prof'
    gem 'test-unit'
    gem 'rspec'
    gem 'rspec-rails'

    # gem 'guard-sublime-ctags'
    gem 'gem-ctags'
end

