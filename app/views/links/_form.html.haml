= simple_form_for(@link) do |f|

  .container-fluid

    = render partial: 'common/common_info', locals: { f: f }

    %legend Link

    .row-fluid
      .span12
        = f.input :url, placeholder: 'http://www.google.com' , input_html: { class: "input-block-level" }
        / .span6
        = f.input :description, as: :text, input_html: { class: 'input-block-level tinymce', rows: 5 }

    = render partial: 'common/targets', locals: { parent: @link, f: f }
    = render partial: 'common/countries', locals: { parent: @link }

  %div.form-actions.margin-none.text-right
    = f.submit 'Save', class: "btn btn-success"
    = link_to "Cancel", links_path, class: "btn"


