.accordion#languages
  .accordion-group
    .accordion-head
      %a.accordion-toggle.btn.btn-link.btn-small{ href: '#language-list', data: { toggle: 'collapse', parent: '#languages' } }
        Language
        %span.caret
    .accordion-body.in#language-list
      .accordion-inner
        - if objs.respond_to?('facets')
          .list-group
            - objs.facets['languages']['terms'].each do |facet|
              - if !current_page?(params.merge(languages: facet['term'], page: 1))
                = link_to params.merge(languages: facet['term'], page: 1), class: 'list-group-item' do
                  = facet['term']
                  %span.badge.pull-right= facet['count']
              - else
                = link_to params.except(:languages), class: 'list-group-item active' do
                  = fa_icon 'times'
                  = "Remove #{facet['term']}"
