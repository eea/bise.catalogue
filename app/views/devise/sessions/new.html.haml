/ %h2 Sign in

.container-fluid
  .row-fluid
    .span8
      %legend Welcome to BISE Catalogue!
    .span4
      .well
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { style: 'margin:0px' }) do |f|
          .form-inputs
            = f.input :login, :autofocus => true
            = f.input :password, :required => false
            / = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?

          .form-actions
            = f.button :submit, "Sign in"

= render "devise/shared/links"
