- content_for :pageheader do
  Manage sites (Contributors)

- content_for :actions do
  - if current_user.approver?
    = link_to  new_admin_site_path, class: "btn" do
      = fa_icon 'plus'
      New Site

.container-fluid
  %table.table.table-striped
    %tr
      %th Name
      %th Description
      %th{ style: 'width: 48px' }
      %th{ style: 'width: 75px' }
    - @sites.each do |site|
      %tr
        %td= site.name
        %td= raw site.description
        %td
          = link_to edit_admin_site_path(site), class: 'btn btn-primary btn-mini' do
            = fa_icon 'pencil'
            Edit
        %td
          = link_to admin_site_path(site), method: :delete, class: 'btn btn-danger btn-mini', data: { confirm: 'Are you sure?' } do
            = fa_icon 'trash-o'
            Destroy
