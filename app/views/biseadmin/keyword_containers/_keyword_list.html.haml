.container-fluid
  %legend Keyword List
  %table.table.table-striped
    - container.keywords.each do |keyword|
      %tr
        %td{ style: 'width:25px' }
          = fa_icon 'key'
        %td
          = best_in_place [:biseadmin, keyword], :name
        %td{ style: 'width: 65px' }
          = link_to biseadmin_keyword_path(keyword), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } do
            = fa_icon 'trash-o'
            Destroy
    %h6.muted= "#{@keyword_container.keywords.size} keywords founded in this category."
