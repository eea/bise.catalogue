.accordion#classis
  .accordion-group
    .accordion-head
      %a.accordion-toggle.btn.btn-link.btn-small{ href: '#classis-list', data: { toggle: 'collapse', parent: '#classis' } }
        Class
        %span.caret
    .accordion-body.in#classis-list
      .accordion-inner
        .list-group
          - @species.facets['classis']['terms'].each do |facet|
            - if !current_page?(params.merge(classis: facet['term'], page: 1))
              = link_to params.merge(classis: facet['term'], page: 1), class: 'list-group-item' do
                = facet['term']
                %span.badge.pull-right= facet['count']
            - else
              = link_to params.except(:classis), class: 'list-group-item active' do
                = fa_icon 'times'
                = "Remove #{facet['term']}"
