- content_for :pageheader do
    = @document.name

- content_for :actions do
    = link_to  documents_path, :class => "btn" do
        %i.icon-reply
        Back
    = link_to  edit_document_path(@document), :class => "btn" do
        %i.icon-pencil
        Edit
    = link_to  document_path(@document), :method => :delete, :class => "btn btn-danger pull-right" do
        %i.icon-trash
        Delete


- if notice
    %div.alert.alert-success
        %button.close{ :type => "button", 'data-dismiss' => 'alert' }
            &times;
        %h4 Success!
        = notice

.container

    .row
        %div.span2{ :style => 'text-align:right'}
            %b Description:
        %div.span10
            = raw @document.description


    .row
        .span10.offset2
            %hr.divider

    .row
        %div.span2{ :style => 'text-align:right'}
            %b Author:
        %div.span10
            = @document.author

    .row
        .span10.offset2
            %hr.divider

    .row
        %div.span2{ :style => 'text-align:right'}
            %b Downloads:
        %div.span10
            = @document.downloads

    .row
        .span10.offset2
            %hr.divider

    .row
        %div.span2{ :style => 'text-align:right'}
            %b File :
        %div.span10
            = link_to @document.file_url, :class => "btn" do
                %i.icon-download-alt
                Download
                %small
                    (
                    = (@document.file_size/1024).round(2)
                    KB)






    / = link_to 'Edit', edit_document_path(@document), :class => "btn"
    / = link_to 'Back', documents_path, :class => "btn"
