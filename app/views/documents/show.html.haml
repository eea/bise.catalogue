- content_for :pageheader do
    = @document.title

- content_for :actions do
    = link_to  documents_path, :class => "btn" do
        %i.icon-reply
        Back
    = link_to  edit_document_path(@document), :class => "btn" do
        %i.icon-pencil
        Edit
    = link_to @document.file_url, :class => "btn" do
        %i.icon-download-alt
        Download
        %small
            (
            = (@document.file_size/1024).round(2)
            KB)
    = link_to  document_path(@document), :method => :delete, :class => "btn btn-danger pull-right" do
        %i.icon-trash
        Delete


- if notice
    %div.alert.alert-success
        %button.close{ :type => "button", 'data-dismiss' => 'alert' }
            &times;
        %h4 Success!
        = notice

.container

    %table.table
        %tbody
            %tr
                %td.collabel
                    %b Site:
                %td.colcontent
                    = @document.site.name unless @document.site.nil?
                %td.collabel
                    %b Geographical Coverage:
                %td.colcontent
                    = @document.geographical_coverage
                / %td.collabel
                /     %b File :
                / %td
                /     = link_to @document.file_url, :class => "btn btn-mini" do
                /         %i.icon-download-alt
                /         Download
                /         %small
                /             (
                /             = (@document.file_size/1024).round(2)
                /             KB)
            %tr
                %td.collabel
                    %b Author :
                %td.colcontent
                    = @document.author
                %td.collabel
                    %b Biographical Region:
                %td.colcontent
                    = @document.biographical_region
            %tr
                %td.collabel
                    %b Published on:
                %td.colcontent
                    = @document.published_on
                %td.collabel
                    / %b Theme:
                %td.colcontent

            %tr
                %td.collabel
                    %b Downloads :
                %td.colcontent
                    = @document.downloads
                %td.collabel
                    %b Language :
                %td.colcontent
                    = @document.language
            %tr
                %td.collabel
                    %b Description :
                %td{ :colspan => 3 }
                    = raw @document.description

