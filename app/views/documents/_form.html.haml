= simple_form_for @document, :html => { :class => 'form-vertical', :multipart => true } do |f|

    = f.input :name, :placeholder => 'Example Document'
    = f.input :description, :as => :text, :placeholder => 'Write a description here...', :input_html => { :cols => 50, :rows => 7 }
    = f.file_field :file, :label => 'Add a document please.'
    /= f.input :remote_file_url
    / f.input :file, :as => :file
    %br
    %br
    %div.form-actions
        = f.submit 'Save', :class => "btn btn-primary"
