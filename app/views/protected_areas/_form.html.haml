= form_for @protected_area do |f|
  - if @protected_area.errors.any?
    #error_explanation
      %h2= "#{pluralize(@protected_area.errors.count, "error")} prohibited this protected_area from being saved:"
      %ul
        - @protected_area.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.number_field :code
  .field
    = f.label :uri
    = f.text_field :uri
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :designation_year
    = f.number_field :designation_year
  .field
    = f.label :nuts_code
    = f.text_field :nuts_code
  .field
    = f.label :area
    = f.text_field :area
  .field
    = f.label :length
    = f.text_field :length
  .field
    = f.label :long
    = f.text_field :long
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :source_db
    = f.text_field :source_db
  .actions
    = f.submit 'Save'
