- content_for :pageheader do
  = @article.title

- content_for :actions do
  - if search_params_available?
    = link_to :back, class: 'btn btn-default' do
      = fa_icon 'reply'
      Back
  - else
    = link_to articles_path, class: 'btn btn-default' do
      = fa_icon 'reply'
      Back to List
  - if current_user.approver?
    = link_to  edit_article_path(@article), class: 'btn btn-default' do
      = fa_icon 'pencil'
      Edit
    = link_to  article_path(@article), method: :delete, class: 'btn btn-danger' do
      = fa_icon 'trash-o'
      Delete


.container-fluid

  = render 'templates/common_info', obj: @article

  %legend Article
  .row
    .col-lg-12
      = raw @article.content

  = render 'templates/countries', object: @article
  = render 'templates/biographical_region', object: @article
  = render 'templates/targets_and_actions', object: @article
  = render 'templates/tags', object: @article


