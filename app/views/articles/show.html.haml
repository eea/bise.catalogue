- content_for :pageheader do
    = @article.title

- content_for :actions do
    = link_to articles_path, :class => "btn" do
        %i.icon-reply
        Back
    = link_to  edit_article_path(@article), :class => "btn" do
        %i.icon-pencil
        Edit
    = link_to  article_path(@article), :method => :delete, :class => "btn btn-danger pull-right" do
        %i.icon-trash
        Delete


- if notice
    %div.alert.alert-success
        %button.close{ :type => "button", 'data-dismiss' => 'alert' }
            &times;
        %h4 Success!
        = notice

.container

    .row
        %div.span2{ :style => 'text-align:right'}
            %b Published on:
        %div.span10
            = @article.published_on

    .row
        .span10.offset2
            %hr.divider

    .row
        %div.span2{ :style => 'text-align:right'}
            %b Author :
        %div.span10
            = @article.author

    .row
        .span10.offset2
            %hr.divider

    .row
        %div.span2{ :style => 'text-align:right'}
            %b Source URL :
        %div.span10
            = @article.source_url


    .row
        .span10.offset2
            %hr.divider

    .row
        %div.span2{ :style => 'text-align:right'}
            %b Content:
        %div.span10
            = raw @article.content

    / = link_to 'Edit', edit_article_path(@article)
    / = link_to 'Back', articles_path, :class => "btn"
