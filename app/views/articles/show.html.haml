- content_for :pageheader do
    = @article.title

- content_for :actions do
    = link_to  articles_path, :class => "btn squared-button" do
        = image_tag '/assets/arrow_left.png'
        Back
    = link_to  edit_article_path(@article), :class => "btn squared-button" do
        = image_tag '/assets/pencil32.png'
        Edit


- if notice
    %div.alert.alert-success
        %button.close{ :type => "button", 'data-dismiss' => 'alert' }
            &times;
        %h4 Success!
        = notice

.container
    %div.row
        %div.span2
            %b Published on:
        %div.span10
            = @article.published_on
    %hr

    %div.row
        %div.span2
            %b Content:
        %div.span10
            = raw @article.content

    %hr

    / = link_to 'Edit', edit_article_path(@article)
    / = link_to 'Back', articles_path, :class => "btn"
