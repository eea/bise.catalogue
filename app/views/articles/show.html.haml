- content_for :pageheader do
    = @article.title

- content_for :actions do
    = link_to articles_path, :class => "btn" do
        %i.icon-reply
        Back
    = link_to  edit_article_path(@article), :class => "btn" do
        %i.icon-pencil
        Edit
    = link_to  article_path(@article), :method => :delete, :class => "btn btn-danger pull-right" do
        %i.icon-trash
        Delete


- if notice
    %div.alert.alert-success
        %button.close{ :type => "button", 'data-dismiss' => 'alert' }
            &times;
        %h4 Success!
        = notice

.container

    %table.table
        %tbody
            %tr
                %td{ :style => 'width: 20%;text-align: right;' }
                    %b Published on:
                %td
                    = @article.published_on
            %tr
                %td{ :style => 'width: 20%;text-align: right;' }
                    %b Author :
                %td
                    = @article.author
            %tr
                %td{ :style => 'width: 20%;text-align: right;' }
                    %b Source URL :
                %td
                    = @article.source_url
            %tr
                %td{ :style => 'width: 20%;text-align: right;' }
                    %b Content :
                %td
                    = raw @article.content
