- content_for :pageheader do
  = @article.title

- content_for :actions do
  - if search_params_available?
    = link_to :back, class: 'btn btn-default' do
      = fa_icon 'reply'
      Back
  - else
    = link_to articles_path, class: 'btn btn-default' do
      = fa_icon 'reply'
      Back to List
  - if current_user.approver?
    = link_to  edit_article_path(@article), class: 'btn btn-default' do
      = fa_icon 'pencil'
      Edit
    = link_to  article_path(@article), method: :delete, class: 'btn btn-danger' do
      = fa_icon 'trash-o'
      Delete


.container-fluid

  = render 'common/showinfo', obj: @article

  %legend Article
  .row
    .col-lg-12
      = raw @article.content

  %legend Countries
  .row
    .col-lg-12
      - for c in @article.countries
        %span.label.label-success= c.name

  %legend Biographical Region:
  .row
    .col-lg-12
      = @article.biographical_region

  .row
    .col-md-6
      %legend Biodiversity Strategy Targets
      .row
        .col-lg-12
          - @article.targets.each do |t|
            .label.label-success= t.name
    .col-md-6
      %legend Biodiversity Strategy Actions
      .row
        .col-lg-12
          - @article.actions.each do |t|
            .label.label-success= t.name


  %legend Tags
  .row
    .col-lg-12
      - @article.tags.each do |t|
        .label.label-success= t.name

%br
