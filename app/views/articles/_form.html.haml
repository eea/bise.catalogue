
= simple_form_for(@article) do |f|

    .tab-content

        #general.tab-pane.active

            .container-fluid

                = render :partial => 'common/common_info', :locals => { :f => f }

                = render :partial => 'common/languages', :locals => { :parent => @article }

                = render :partial => 'common/publication', :locals => { :f => f }

                %legend Article
                .row-fluid
                    .span12
                        = f.input :content, :as => :text, :input_html => { :class => "input-block-level tinymce" }

        #geographic.tab-pane
            .container-fluid
                = render :partial => 'common/countries', :locals => { :parent => @article }

        #related.tab-pane

            .container-fluid
                .alert.alert-error
                    %button.close{ :type => 'button', :data => { :dismiss => 'alert' } } &times;
                    %strong
                        Warning!
                    This section is under contruction...

        #ecosystems.tab-pane
            .container-fluid
                .alert.alert-error
                    %button.close{ :type => 'button', :data => { :dismiss => 'alert' } } &times;
                    %strong
                        Warning!
                    This section is under contruction...

        %div.form-actions
            = f.submit 'Save', :class => "btn btn-success"
            = link_to "Cancel", articles_path, :class => "btn"


