= simple_form_for(@article, :html => { :class => "form-horizontal" }) do |f|

    = f.association :site

    = f.input :title, :placeholder => 'Example Document',
              :input_html => { :class => "span6" }
    = f.input :author, :as => :string, :placeholder => 'John Doe',
              :input_html => { :class => "span6" }
    = f.input :source_url, :as => :string, :placeholder => 'http://example.eu',
              :input_html => { :class => "span6" }
    / = f.input :published_on, :as => :date
    = f.input :published_on, :as => :string, :input_html => { :class => 'input-small' }
    = f.input :published
    = f.input :content, :as => :text, :input_html => { :class => "span8 tinymce" }

    %div.form-actions
        = f.submit 'Save', :class => "btn btn-success"
        = link_to "Cancel", articles_path, :class => "btn"

