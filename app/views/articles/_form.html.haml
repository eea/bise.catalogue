
= simple_form_for(@article) do |f|

  .tab-content
    .container-fluid
      = render partial: 'common/common_info', locals: { f: f }
      %legend Article
      .row
        .col-lg-12
          = f.input :content, as: :text, input_html: { class: 'form-control tinymce' }
      = render partial: 'common/targets', locals: { parent: @article, f: f }
      = render partial: 'common/countries', locals: { parent: @article }

  .form-actions
    = f.submit 'Save', class: 'btn btn-success'
    = link_to 'Cancel', articles_path, class: 'btn btn-default'


