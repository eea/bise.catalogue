- content_for :pageheader do
  Manage Keywords

- content_for :actions do
  - if current_user.approver?
    / = link_to  new_admin_site_path, class: "btn" do
    = link_to  new_admin_keyword_container_path, class: "btn" do
      = fa_icon 'plus'
      Add Keyword Category


.container-fluid
  .alert.alert-danger
    %strong Atention!!
    If you change this options, a reindexation should be performed in order to
    apply the changes in the search engine.

  %table.table.table-striped
    %thead
      %tr
        %th
          Keyword Category
        %th{ style: 'width: 70px' }
          Keywords
        %th{ style: 'width: 120px' }
          Actions
    %tbody
      - @keyword_containers.each do |container|
        %tr
          %td
            = link_to admin_keyword_container_path(container) do
              = container.title
          %td
            = container.keywords.size
          %td{ style: 'padding: 0' }
            .btn-toolbar{ style: 'margin: 4px 0 0 0' }
              .btn-group
                = link_to admin_keyword_container_path(container), class: 'btn btn-default btn-small' do
                  -# = fa_icon 'eye'
                  Show
                = link_to edit_admin_keyword_container_path(container), class: 'btn btn-default btn-small' do
                  -# = fa_icon 'pencil'
                  Edit
                = link_to admin_keyword_containers_path(container), method: :delete, class: 'btn btn-danger btn-small', data: { confirm: 'Are you sure?' } do
                  -# = fa_icon 'trash-o'
                  Destroy

