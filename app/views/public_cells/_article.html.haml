%tr
  %td.article_cell
    .cell-title
      = link_to article.title, article

    %small
      = "by #{article.author} " unless article.try(:author).blank?
      = "at #{article.published_on}" unless article.try(:published_on).blank?

    - if article.approved?
      %span.label.label-success.pull-right
        Approved
    - else
      %span.label.label-danger.pull-right
        Unapproved

