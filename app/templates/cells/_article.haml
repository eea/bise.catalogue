%tr
  %td{ style: 'width: 10px;vertical-align:middle' }
    = check_box_tag "article_ids[]", article.id if current_user.approver?
  %td.article_cell
    .cell-title
      = link_to article.title, article

    %small by #{article.author} at #{article.created_at.strftime("%m/%d/%Y")}

    - if article.approved?
      %span.label.label-success.pull-right
        Published
    - else
      %span.label.label-important.pull-right
        Unpublished

    %br
    - if hit.has_key?'highlight' and hit['highlight'].has_key? 'content_without_tags'
      - att_hits = hit['highlight']['content_without_tags']

      .hits
        %ol{ type: "I" }
          - att_hits.each do |h|
            %li
              %p.hit= raw '...' + h + '...'

