@import 'catalogue.mixin.styl'


#catalogue-app
    font-family: "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

.catalogue-toolbar
    border-radius(5px)
    padding: 12px
    margin-bottom: 15px
    background: BASE_GREEN

    .select-field

        float: left
        width: 31% !important
        overflow:hidden

        background: #1eaa46
        background: -moz-linear-gradient(top,  #1eaa46 1%, #168130 100%)
        background: -webkit-gradient(linear, left top, left bottom, color-stop(1%,#1eaa46), color-stop(100%,#168130))
        background: -webkit-linear-gradient(top,  #1eaa46 1%,#168130 100%)
        background: -o-linear-gradient(top,  #1eaa46 1%,#168130 100%)
        background: -ms-linear-gradient(top,  #1eaa46 1%,#168130 100%)
        background: linear-gradient(to bottom,  #1eaa46 1%,#168130 100%)

        border-radius(5px)
        border: 1px solid BORDER_GREEN

        select
            color: white
            font-weight: bold
            padding: 5px
            float:left
            width: 100%
            height 30px
            padding-left: 20px
            // -webkit-appearance: none;
            // -moz-appearance: none;
            // appearance: none;
            border: none;
            background: transparent

    form
        margin: 0

    input
        padding: 4px 6px
        margin: 0
        margin-left: 1.404255319148934%
        width: 270px

        border-radius(4px)
        border: 1px solid #2d3f2e

        font-size: 14px
        line-height: 22px




#catalogue-queries
    font-size: 16px
    color: white
    display: none
    background: BASE_GREEN
    border-radius(5px)
    margin-bottom: 15px
    padding: 10px

    ul
        list-style: none !important
        padding: 0
        margin: 0px
        li
            display: block
            height: 20px
            line-height: 20px
            .close
                color: #107327
                float: right
                font-size: 20px
                cursor:pointer
                &:hover
                    color: white
    small
        font-size: 12px
        text-align:right


.catalogue-facet
    min-height: 40px
    margin-bottom: 15px
    font-size: 14px

    legend
        font-size: 17px
        width: 95%
        padding-left: 10px
        padding-bottom: 5px
        margin-right: 10px
        border-bottom: 1px dashed #c2c2c2
        font-weight: bold
        color: #4a4a4a

    ul
        list-style: none
        -webkit-padding-start: 10px
        li a
            cursor: pointer
            text-decoration: none
            color: BASE_GREEN
            font-weight: bold



.catalogue-no-results
    // border: 2px dashed #cbcbcb
    height: 380px

    h1
        text-align: center
        font-style: italic
        font-size: 42px
        position: relative
        height: 100px
        width: 90%
        left: 50%
        top: 50%
        color: #bbbbbb
        transform: translate(-50%, -50%)
        -webkit-transform: translate(-50%, -50%)
        -moz-transform: translate(-50%, -50%)
        -ms-transform: translate(-50%, -50%)


.catalogue-content
    // background: white

    .select-field
        display: inline-block
        overflow:hidden

        // background: #f6f8f9;
        // background: -moz-linear-gradient(top,  #f6f8f9 0%, #e5ebee 50%, #d7dee3 51%, #f5f7f9 100%);
        // background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f6f8f9), color-stop(50%,#e5ebee), color-stop(51%,#d7dee3), color-stop(100%,#f5f7f9));
        // background: -webkit-linear-gradient(top,  #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%);
        // background: -o-linear-gradient(top,  #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%);
        // background: -ms-linear-gradient(top,  #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%);
        // background: linear-gradient(to bottom,  #f6f8f9 0%,#e5ebee 50%,#d7dee3 51%,#f5f7f9 100%);

        border-radius(5px)
        // border: 1px solid #9b9b9b

        select
            color: #484848
            // font-weight: bold
            padding: 2px
            // float:left
            width: 100%
            height 30px
            padding-left: 10px
            padding-right: 10px
            -webkit-appearance: menulist-button
            -moz-appearance: menulist-button
            appearance: menulist-button
            // border: none;
            // background: transparent


.catalogue-options
    // background: red
    label
        font-size: 12px
        margin-right: 7px

.catalogue-status
    text-align center
    color #167124
    font-size 24px
    font-weight bold
    vertical-align bottom

ul#catalogue-results
    list-style: none
    margin: 0 auto
    padding: 0
    font-family: Helvetica, sans-serif
    font-size: 14px

    border-top: 1px solid #999999
    padding-top: 10px
    margin-top: 10px
