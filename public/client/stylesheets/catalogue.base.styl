@import 'catalogue.mixin.styl'


#catalogue-app
  font-family: "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

  .catalogue-sidebar
    width: 25.914893617021278%
    float: left;
  .catalogue-content
    margin-left: 4%
    float: left
    width: 70%

.catalogue-toolbar
  border-radius(4px)
  padding: 12px
  margin-bottom: 35px
  background: BISE_GREEN

#catalogue-search-form
  margin: 0

  .field.switch
    border-radius(4px)
    width: 102%
    height: 40px
    -webkit-margin-before: 0
    -webkit-margin-after: 0
    margin-left: -5px


    .bise-search, .advn-search
      span
        width: 45%
        height: 30px
        line-height: 26px
        float: left
        color: white
        background-color: darken(BISE_GREEN, 15%)
        border: 2px solid darken(BISE_GREEN, 15%)
        border-bottom: 0
        text-align: center
        padding: 12px 1px
        margin-bottom: -20px

    .advn-search
      span
        margin-left: 7px
        // border-left: 0

    .bise-search.selected, .advn-search.selected
      span
        background-color: white
        color: darken(DARK_GREEN, 30%)
        border: 2px solid DARK_GREEN
        border-bottom: 0

    label
      cursor: pointer
    input
      display: none



  .select-field
    width: 100%
    // overflow:hidden
    position: relative

    background: BISE_GREEN
    border-radius(4px)
    border: 2px solid darken(BISE_GREEN, 15%)
    padding 0px 2px

    .arrow-down
      position: absolute
      right: 10px
      width: 0
      height: 0
      border-left: 8px solid transparent
      border-right: 8px solid transparent
      border-top: 8px solid DARK_GREEN
      margin-top: 15px

    select
      color: white
      font-size: 0.9em
      // float:left
      width: 100%
      height 40px
      padding-left: 20px

      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;

      border: none;
      background: transparent



  input
    padding 10px 15px
    // padding: 4px 6px
    margin: 0
    margin-left: 1.404255319148934%
    width: 100%

    border-radius(4px)
    border: 2px solid darken(BISE_GREEN, 15%)
    // border: 2px solid white

    font-size: 14px
    line-height: 20px


  button
    border-radius(5px)
    background: BISE_GREEN
    background-image: url('./assets/search.png')
    background-repeat: no-repeat
    background-position: 12px 8px, center
    background-size: 25px 25px
    height: 44px
    width: 100%
    text-align: center
    cursor: pointer
    border: 2px solid darken(BISE_GREEN, 15%)
    margin: 0 7px
    padding: 10px 15px
    color: white
    font-size: 1em
    line-height: 20px





#catalogue-queries
  font-size: 1.5em
  color: white
  background: BISE_GREEN
  border-radius(5px)
  margin-bottom: 15px
  padding: 10px

  ul
    list-style: none !important
    padding: 0 !important
    margin: 0 !important
    margin-top: 10px !important
    li
      margin-left: 0 !important
      display: block !important
      line-height: 20px
      font-size: 1.5em

      list-style: none !important
      list-style-image: none !important
      list-style-position: inside !important
      list-style-type: none

  #results-count
    margin-top: 1em
    font-size: 0.8em
    text-align: left



#catalogue-categories
  border-radius(3px)
  padding 7px
  border: 1px solid LIGHT_GRAY
  margin-bottom 10px
  font-size: 14px
  font-family: Helvetica, sans-serif

  h3
    font-size: 16px
    // font-weight: normal
    padding-bottom: 5px
    margin-top: 2px
    margin-bottom: 7px
    border-bottom: 1px solid #CCC

  input[type="checkbox"]
    margin-right: 10px !important
    background: orange








  // input
  //   margin-right: 10px

.catalogue-facet
  border-radius(3px)
  border 1px solid LIGHT_GRAY
  margin-bottom: 10px
  font-size: 14px

  .facet-header
    padding: 6px 7px
    background: LIGHT_GRAY

    legend
      width: 90%
      padding: 0 2px !important
      // height 29px

    .triangle
      margin-top: 7px
      float: right
      border-style: solid
      border-width: 7px 5px 0 5px
      border-color: #515151 transparent transparent transparent
      &.up
        -webkit-transform: rotate(180deg)
        -webkit-animation-name: rotate
        -webkit-animation-duration: 0.5s
        -webkit-animation-iteration-count:  infinite
        -webkit-transition-timing-function: linear

  legend
    cursor: pointer
    // color: #707070
    color: DARK_GRAY
    // font-size: 17px
    font-size: 0.9em
    width: 94%
    font-weight: bold

  ul
    border-top: 1px solid #b8b8b8
    list-style: none
    margin: 0px
    -webkit-padding-start: 0px

    // padding-top: 14px
    li
      a
        display:block
        cursor: pointer
        border-bottom: 1px solid #d7d7d7
        padding: 10px 12px
        &:hover
          color: white
          background: BISE_GREEN

      .facet-count
        float: right
        margin-right: 5px
        color: #575757
        font-weight: bold
        border: 1px solid #e4e4e4
        padding: 3px 7px
        border-radius(5px)
        margin-top: 6px

      .facet-remove
        border-radius(5px)
        font-size: 0.7em
        font-weight: bold
        padding: 4px 7px
        border: 1px solid #c40000
        color: #c40000 !important
        float: right
        margin-right: 5px
        margin-top: 4px

#content ul
  list-style: none !important
  margin: 0 !important
  padding: 0 !important
  li
    margin-bottom: 0

.catalogue-no-results
  height: 380px

  h1
    text-align: center
    font-style: italic
    font-size: 42px
    position: relative
    height: 100px
    width: 90%
    left: 50%
    top: 50%
    color: #bbbbbb
    transform: translate(-50%, -50%)
    -webkit-transform: translate(-50%, -50%)
    -moz-transform: translate(-50%, -50%)
    -ms-transform: translate(-50%, -50%)


.catalogue-content
  .select-field
    display: inline-block
    overflow:hidden

    border-radius(5px)

    select
      color: #484848
      padding: 2px
      // float:left
      width: 100%
      height 30px
      padding-left: 10px
      padding-right: 10px
      -webkit-appearance: menulist-button
      -moz-appearance: menulist-button
      appearance: menulist-button
      // border: none;
      // background: transparent


.catalogue-options
  label
    font-size: 12px
    margin-right: 7px

.catalogue-status
  text-align center
  color #167124
  font-size 24px
  font-weight bold
  vertical-align bottom

ul#catalogue-results
  list-style: none
  margin: 0 auto
  padding: 0
  font-family: Helvetica, sans-serif
  font-size: 14px

  border-top: 1px solid #999999
  padding-top: 10px
  margin-top: 10px
