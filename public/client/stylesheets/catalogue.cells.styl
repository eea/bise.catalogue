@import 'catalogue.mixin.styl'


CELL_BEFORE_COLOR = #666666
CELL_SMALL_COLOR = #999999






.catalogue-cell

  // border-bottom: 1px solid #cbcbcb
  // border-bottom: 1px solid #d3d3d3
  border-bottom 1px dotted LIGHT_GRAY
  margin: 1em 0
  padding-top: 5px
  padding-bottom: 10px
  width: 100%

  .category
    font-size: 0.9em
    color: CELL_SMALL_COLOR

  .cell-title
    font-size: 14px
    // color: #86a000
    a
      cursor: pointer
      display: block
      font-size: 1.3em
      // font-weight: bold
      color: BASE_GREEN
      // color: darken(BISE_GREEN, 60%)
      text-overflow: ellipsis
      overflow: hidden;
      width: 90%
      white-space: nowrap
      word-wrap: normal

  .cell-subtitle
    font-size: 0.9em
    color: #494949

    strong
      color: DARK_GRAY

  // Site badge
  .label.label-success
    font-size: 0.9em
    float: right

  .hits
    border-left: 3px solid #8ea04c
    border-top: 1px solid #8ea04c
    font-size: 10px
    line-height: 10px

    -webkit-box-shadow:  1px 2px 2px 2px rgba(0, 0, 0, 0.3)
    box-shadow:  1px 2px 2px 2px rgba(0, 0, 0, 0.3)

  p.hit
    background: white
    color: #6b6b6b
    margin-bottom: 0

  em
    // color: #86a000
    font-weight: bold
    font-style: normal


  .att-preview
    min-height: 35px
    // padding: 5px
    font-size: 10px;

    ol
      margin-top: 12px
      margin-bottom: -5px
      margin-left: -25px
      list-style-type: disc
      li
        color: DARK_GRAY
        em
          // background-color: BISE_GREEN
          padding: 1px 3px
          color: darken(BISE_GREEN, 50%)














